<?xml version="1.0"?>
<odoo>
    <data>
        <record id="student_project_view_form" model="ir.ui.view">
            <field name="name">student.project.form</field>
            <field name="model">student.project</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_view_project_submit"
                            string="Submit Project"
                            type="object"
                            class="oe_highlight"
                            confirm="Are you sure you want to submit this project?"
                            groups="student.group_professor"/>
                        <button name="action_view_project_cancel"
                            string="Cancel Submission"
                            type="object"
                            class="oe_highlight"
                            confirm="Are you sure you want to cancel your project submission?"
                            groups="student.group_professor"/>
                        
                        <button name="action_view_project_approve"
                            string="APPROVE PROJECT"
                            type="object"
                            class="btn-success"
                            confirm="Are you sure you want to accept this project?"
                            groups="student.group_supervisor"/>
                        <button name="action_view_project_reject"
                            string="REJECT PROJECT"
                            type="object"
                            class="btn-danger"
                            confirm="Are you sure you want to reject this project?"
                            groups="student.group_supervisor"/>
                        <button name="action_view_project_return"
                            string="RETURN PROJECT"
                            type="object"
                            class="oe_highlight"
                            confirm="Are you sure you want to return this project?"
                            groups="student.group_supervisor"/>
                        <button name="action_view_project_reset"
                            string="RESET PROJECT"
                            type="object"
                            class="btn-warning"
                            confirm="WARNING! This is a development command. Are you sure that you want reset the project?"
                            groups="student.group_administrator"/>

                        <button name="action_view_project_apply"
                            string="Apply"
                            type="object"
                            class="oe_highlight"
                            groups="student.group_student"
                            attrs="{'invisible': ['&amp;', ('state', '!=', 'approved'), ('state', '!=', 'applied')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="locked" invisible="1"/>
                            
                            <group string="Basic Info">
                                <field name="name" attrs="{'readonly': [('locked', '=', True)]}" />
                                <field name="name_ru" attrs="{'readonly': [('locked', '=', True)]}" />
                                <field name="professor_id"/>
                                <field name="create_date"/>
                                <field name="write_date"/>
                            </group>
                            <group string="Availability">
                                <field name="state"/>
                                <field name="assigned"/>
                                <field name="proposal_id" attrs="{'invisible': [('proposal_id', '=', False)]}"/>
                                <!-- If based on a proposal -->
                                <field name="student_elected" widget="many2many_tags" string="Proposed by" attrs="{'invisible': [('proposal_id', '=', False)]}"/>
                                <!-- If NOT based on a proposal -->
                                <field name="student_elected" widget="many2many_tags" attrs="{'invisible': ['|', ('proposal_id', '!=', False), ('state', '!=', 'assigned')]}"/>
                            </group>
                            <group string="Eligibility" colspan="2">
                                <group>
                                    <field name="campus_ids" widget="many2many_tags" attrs="{'readonly': [('locked', '=', True)]}"/>
                                    <field name="faculty_ids" help="You can only choose faculties from the campuses above." widget="many2many_tags" attrs="{'readonly': [('locked', '=', True)]}" domain="[('campus', 'in', campus_ids)]"/>
                                    <field name="program_ids" help="You can only choose programs from the faculties above." widget="many2many_tags" attrs="{'readonly': [('locked', '=', True)]}" domain="[('program_faculty_id', 'in', faculty_ids)]" groups="student.group_administrator,student.group_supervisor,student.group_professor"/>
                                    <field name="degree_ids" widget="many2many_tags" attrs="{'readonly': [('locked', '=', True)]}"/>
                                </group>
                                <group>
                                    <field name="type" attrs="{'readonly': [('locked', '=', True)]}"/>
                                    <field name="format" attrs="{'readonly': [('locked', '=', True)]}"/>
                                    <field name="language" attrs="{'readonly': [('locked', '=', True)]}"/>
                                </group>
                            </group>
                            <group string="Evaluations" colspan="2" attrs="{'invisible': [('state', 'in', ['draft', 'assigned', 'returned'])]}">
                                <group>
                                    <field name="approved_program_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="rejected_program_ids" widget="many2many_tags" groups="student.group_administrator, student.group_supervisor, student.group_professor"/>
                                </group>
                            </group>        
                            <notebook>
                                <page string="Additional Details">
                                    <group>
                                        <field name="description" placeholder="Short project description to inspire potential applicants." attrs="{'readonly': [('locked', '=', True)]}"/>
                                        <field name="requirements" placeholder="Minimum requirements for applications can be listed here." attrs="{'readonly': ['|',('locked', '=', True),('proposal_id', '!=', False)]}"/>
                                        <field name="results" placeholder="Expected outcomes at the end of given implementation/research period." style="margin-bottom:20 px" attrs="{'readonly': [('locked', '=', True)]}"/>
                                    </group>
                                    
                                    <group string="Files">
                                        <field name="file_count"/>
                                        <field name="additional_files" widget="many2many_binary" string="Attach a file" attrs="{'readonly':['&amp;', ('state','!=','draft'), ('state','!=','returned')]}"/>
                                    </group>
                                </page>
                                <page string="Applications" attrs="{'invisible': [('state', 'not in', ['applied', 'approved'])]}">
                                    <p>
                                        <label for="applications" class="oe_inline"/>
                                        <field name="applications" style="margin-left:10px" class="oe_inline"/>
                                    </p>
                                    <field name="application_ids">
                                        <tree>
                                            <field name="applicant"/>
                                            <field name="email"/>
                                            <field name="student_program"/>
                                            <field name="student_degree"/>
                                            <button name="action_view_application_accept" 
                                                    string="Accept ✔"
                                                    type="object"
                                                    class="btn-success"
                                                    confirm="Are you sure to accept the application? Other applications will be automatically rejected."
                                                    groups="student.group_professor"
                                                    attrs="{'invisible': [('state', '!=', 'sent')]}"/>  
                                            <button name="action_view_application_reject" 
                                                    string="Reject ✘"
                                                    type="object"
                                                    class="btn-danger"
                                                    confirm="Are you sure to reject the application?"
                                                    groups="student.group_professor"
                                                    attrs="{'invisible': [('state', '!=', 'sent')]}"/>  
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Calendar" attrs="{'invisible': [('state', '!=', 'assigned')]}">
                                    <div class="text-center">
                                        <button name="action_view_project_events" 
                                                string="Go to calendar view ►"
                                                type="object"
                                                class="btn-secondary"/>  
                                    </div>
                                    <field name="project_events" style="margin-top:10px">
                                        <tree default_order='due_date' groupby="type" decoration-muted="complete" decoration-bf="due_date==current_date and complete==False" decoration-primary="due_date==current_date and complete==False" decoration-danger="due_date&lt;current_date and complete==False">
                                            <field name="complete" invisible="1"/>
                                            <field name="name"/>
                                            <field name="type"/>
                                            <field name="initiator"/>
                                            <field name="assignee"/>
                                            <field name="due_date"/>
                                        </tree>
                                    </field> 
                                </page>
                                <page string="Results" attrs="{'invisible': [('state', '!=', 'assigned')]}">
                                    <p>
                                        <label for="result_text" class="oe_inline"/>
                                        <field name="result_text" placeholder="List project results (summary, links, etc.) here. Files can be added in the section below." style="margin-left:10px" class="oe_inline"/>
                                    </p>
                                    <p>
                                        <label for="result_files" class="oe_inline"/>
                                        <field name="result_files" widget="many2many_binary" string="Attach a file" attrs="{'readonly':[('state','!=','assigned')]}"/>
                                    </p>
                                </page>
                                <page string="Supervisor Feedback" attrs="{'invisible': [('state', 'not in', ['pending', 'returned', 'rejected'])]}" groups="student.group_administrator, student.group_supervisor, student.group_professor">
                                    <field name="reason" placeholder="Please specify the reason if the project will be rejected or returned." attrs="{'readonly': ['|', ('state', '=', 'rejected'), ('state', '=', 'returned')]}" groups="student.group_administrator, student.group_supervisor"/>
                                    <field name="reason" placeholder="Please specify the reason if the project will be rejected or returned." readonly="True" groups="student.group_professor"/>
                                </page>
                                <page string="Technical Log &amp; Details" groups="student.group_administrator">
                                    <field name="message_follower_ids" widget="mail_followers"/>
                                    <field name="activity_ids"/>
                                    <field name="message_ids"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                
                    <div class="oe_chatter" groups="student.group_administrator, student.group_supervisor, student.group_professor">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="student_project_list_view" model="ir.ui.view">
            <field name="name">Projects - List View</field>
            <field name="model">student.project</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="name_ru"/>
                    <field name="professor_id"/>
                    <field name="format"/>
                    <field name="language"/>
                    <field name="program_ids" widget="many2many_tags"/>
                    <field name="degree_ids" widget="many2many_tags"/>
                    <field name="applications"/>
                </tree>
            </field>
        </record>

        <record id="student_project_kanban_view" model="ir.ui.view">
            <field name="name">Projects - Kanban View</field>
            <field name="model">student.project</field>
            <field name="arch" type="xml">
                <kanban quick_create="false" 
                        records_draggable="false" 
                        default_group_by="state" 
                        class="o_res_partner_kanban o_kanban_small_column" 
                        name="student_project_kanban"
                        order="write_date">
                    <field name="state"/>
                    <field name="name"/>
                    <field name="professor_id"/>
                    <field name="applications"/>
                    <field name="write_date"/>

                    <templates>
                        <field name="color"/>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="oe_kanban_title">
                                        <strong><field name="state"/></strong>
                                         (<field name="write_date_date"/>)
                                    </div>
                                    <div class="oe_kanban_subtitle">
                                        Project Name:
                                        <field name="name"/>
                                    </div>
                                    <i class="oe_kanban_content">
                                        <div t-if="record.professor_id.value">
                                            Professor:
                                            <t t-esc="record.professor_id.value"/>
                                        </div>
                                        <div t-if="record.applications.value">
                                            Applications:
                                            <t t-esc="record.applications.value"/>
                                        </div>
                                    </i>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- The basic view that student_menus.xml refers to -->
        <record id="student_project_view_action_kanban" model="ir.actions.act_window">
            <field name="name">Project Board</field>
            <field name="res_model">student.project</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="student_project_kanban_view"/>
            <field name="context">{'search_default_my_projects': 1, 'search_default_supervised_by_me': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There are no projects yet. You can create the first one. Yay!
                </p>
            </field>
        </record>

        <!-- The basic view that student_menus.xml refers to -->
        <record id="student_project_view_action_list" model="ir.actions.act_window">
            <field name="name">Available Projects</field>
            <field name="res_model">student.project</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="student_project_list_view"/>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There are no projects yet. You can create the first one. Yay!
                </p>
            </field>
            <field name="domain">[('state', 'in', ['approved','assigned','applied'])]</field>
        </record>

        <!-- Define the action to open the tree view of projects from the professor form-->
        <record id="action_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.project</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('professor_id', '=', active_id)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There are no projects yet. You can create the first one. Yay!
                </p>
            </field>
        </record>
    </data>

    <record id="student_project_view_search" model="ir.ui.view">
        <field name="name">student.project.search</field>
        <field name="model">student.project</field>
        <field name="arch" type="xml">
            <search string="Professor List">
                <field name="name" string="Project" />
                <field name="state" string="Project State"/>
                <filter string="My projects" groups="student.group_professor" name="my_projects" domain="[('professor_account', '=', uid)]"/>
                <filter string="Supervised by me" groups="student.group_supervisor" name="supervised_by_me" domain="[('program_supervisors', 'in', uid)]"/>
                <filter string="Available for application" groups="student.group_student" name="available" domain="[('state', 'in', ['approved','applied'])]"/>
                <filter string="Requires attention" groups="student.group_professor" name="attention_professor" domain="['&amp;', ('professor_account', '=', uid), ('state', 'in', ['returned', 'applied'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Professor" name="professor" context="{'group_by':'professor_id'}"/>
                    <filter string="Project Type" name="project_type" context="{'group_by':'type'}"/>
                    <filter string="Project Format" name="project_format" context="{'group_by':'format'}"/>
                    <filter string="Target Degree" name="target_degree" context="{'group_by':'degree_ids'}"/>
                    <filter string="Faculty" name="faculty" context="{'group_by':'faculty_ids'}"/>
                    <filter string="Target Program" name="program" context="{'group_by':'program_ids'}" groups="student.group_administrator, student.group_supervisor, student.group_professor"/>
                    <filter string="Applicable Program" name="program" context="{'group_by':'approved_program_ids'}" groups="student.group_student"/>
                </group>
            </search>
        </field>
    </record>   

    <!-- ♦ Make it program-specific! -->
    <record id="student_project_view_supervisor" model="ir.actions.act_window">
        <field name="name">Pending Project Submissions</field>
        <field name="res_model">student.project</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="student_project_list_view"/>
        <field name="domain">[('state','=','pending')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There are no pending projects.
            </p>
        </field>
    </record>
</odoo>